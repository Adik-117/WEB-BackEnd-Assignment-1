<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library</title>
</head>
<body>
  <h1>Library</h1>

  <h2>Books List</h2>
  <ul>
    <% books.forEach(book => { %>
      <li>
        <%= book.title %> by <%= book.author %> (Genre: <%= book.genre %>, Status: <%= book.status %>)
        
      </li>
    <% }); %>
  </ul>

  <h2>Add a New Book</h2>
  <form action="/books/add" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>
    <br>
    <label for="author">Author:</label>
    <input type="text" id="author" name="author" required>
    <br>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" required>
    <br>
    <label for="status">Status:</label>
    <input type="text" id="status" name="status" required>
    <br>
    <button type="submit">Add Book</button>
  </form>

  <h2>Edit Book</h2>
<form action="/books/edit" method="post">
  <label for="editOldTitle">Old Book Title:</label>
  <input type="text" id="editOldTitle" name="editOldTitle" required>
  <br>
  <label for="editNewTitle">New Book Title:</label>
  <input type="text" id="editNewTitle" name="editNewTitle" required>
  <br>
  <label for="editNewAuthor">New Author:</label>
  <input type="text" id="editNewAuthor" name="editNewAuthor" required>
  <br>
  <label for="editNewGenre">New Genre:</label>
  <input type="text" id="editNewGenre" name="editNewGenre" required>
  <br>
  <button type="submit">Edit Book</button>
</form>


  <h2>Delete Book</h2>
<form action="/books/delete" method="post">
  <label for="deleteTitle">Book Title:</label>
  <input type="text" id="deleteTitle" name="deleteTitle" required>
  <br>
  <button type="submit">Delete Book</button>
</form>


<a href="/dashboard">Go back</a>
</body>
</html>
