<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library</title>
  <!-- Bootstrap CSS Link -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Market</h1>

    <!-- Books List -->
    <h2>Books List</h2>
    <ul class="list-group">
      <% books.forEach(book => { %>
        <li class="list-group-item">
          <strong><%= book.device %></strong> by <%= book.make %> (Type: <%= book.type %>, Status: <%= book.status %>, Price: <%= book.price %>) 
        </li>
      <% }); %>
    </ul>

    <h2>Add a New Book</h2>
<form action="/books/add" method="post">
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" class="form-control" id="title" name="title" required>
  </div>
  <div class="form-group">
    <label for="author">Author:</label>
    <input type="text" class="form-control" id="author" name="author" required>
  </div>
  <div class="form-group">
    <label for="genre">Genre:</label>
    <input type="text" class="form-control" id="genre" name="genre" required>
  </div>
  <div class="form-group">
    <label for="price">Price:</label>
    <input type="text" class="form-control" id="price" name="price" required>
  </div>
  <div class="form-group">
    <label for="status">Status:</label>
    <input type="text" class="form-control" id="status" name="status" required>
  </div>
  <button type="submit" class="btn btn-primary">Add Book</button>
</form>

    <!-- Edit Book Form -->
<h2>Edit Book</h2>
<form action="/books/edit" method="post">
  <div class="form-group">
    <label for="editOldTitle">Old Book Title:</label>
    <input type="text" class="form-control" id="editOldTitle" name="editOldTitle" required>
  </div>
  <div class="form-group">
    <label for="editNewTitle">New Book Title:</label>
    <input type="text" class="form-control" id="editNewTitle" name="editNewTitle" required>
  </div>
  <div class="form-group">
    <label for="editNewAuthor">New Author:</label>
    <input type="text" class="form-control" id="editNewAuthor" name="editNewAuthor" required>
  </div>
  <div class="form-group">
    <label for="editNewGenre">New Genre:</label>
    <input type="text" class="form-control" id="editNewGenre" name="editNewGenre" required>
  </div>
  <div class="form-group">
    <label for="editNewPrice">New Price:</label>
    <input type="text" class="form-control" id="editNewPrice" name="editNewPrice" required>
  </div>
  <button type="submit" class="btn btn-warning">Edit Book</button>
</form>


    <!-- Delete Book Form -->
    <h2>Delete Book</h2>
    <form action="/books/delete" method="post">
      <div class="form-group">
        <label for="deleteTitle">Book Title:</label>
        <input type="text" class="form-control" id="deleteTitle" name="deleteTitle" required>
      </div>
      <button type="submit" class="btn btn-danger">Delete Book</button>
    </form>

    <!-- Go back link -->
    <a href="/dashboard" class="btn btn-secondary mt-3">Go back</a>
  </div>

  <!-- Bootstrap JS and Popper.js Scripts -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
