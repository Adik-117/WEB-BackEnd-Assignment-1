<!-- delete_user.html -->

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Delete Users</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Include Bootstrap CSS (Assuming you have it hosted or downloaded locally) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Add any other head elements, styles, or scripts -->
    <style>
        /* Custom styles can be added here */
        /* Example: Increase the size of the dropdown */
        #users {
            width: 300px; /* Adjust the width as needed */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Delete Users</h1>

        <form action="/delete-users" method="post">
            <div class="form-group">
                <label for="users">Select user to delete:</label>
                <select class="form-control" id="users" name="users">
                    <!-- Dynamically generated dropdown options from users in PostgreSQL -->
                    <% users.forEach(user => { %>
                        <option value="<%= user.username %>"><%= user.username %></option>
                    <% }); %>
                </select>
            </div>

            <button type="submit" class="btn btn-danger">Delete User</button>

            <div class="btn-container">
                <a class="btn btn-primary" href="/dashboard">Cancel</a>
            </div>
        </form>
    </div>

    <!-- Include Bootstrap JS and any other scripts as needed -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <!-- Add any other content or scripts as needed -->
</body>
</html>
